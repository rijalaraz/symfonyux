<div{{ attributes }} class="mx-5">
    
    <h1>{{ blogpost.title }}</h1>

    <hr>

    <div class="mb-3">
        <label for="blogpost_title" class="form-label">Title</label>
        <input
            type="text"
            data-model="blogpost.title"
            class="form-control"
            value="{{ blogpost.title }}"
            id="blogpost_title"
        />
        {% if this.isValidated and this.getError('blogpost.title') %}
            <small id="helpId" class="text-danger">{{ this.getError('blogpost.title').message }}</small>
        {% endif %}
    </div>

    <div class="mb-3">
        <label for="blogpost_content" class="form-label">Content</label>
        <textarea 
            data-model="blogpost.content"
            class="form-control"
            id="blogpost_content"
            rows="3"
        >
            {{ blogpost.content }}
        </textarea>
        {% if this.isValidated and this.getError('blogpost.content') %}
            <small id="helpId" class="text-danger">{{ this.getError('blogpost.content').message }}</small>
        {% endif %}
    </div>

    {% if not this.getError('blogpost.title') and not this.getError('blogpost.content') %}
        <div class="card my-4 shadow bg-secondary text-light">
            <div class="card-body">
                <h4 class="card-title">{{ blogpost.title }}</h4>
                <p class="card-text">{{ blogpost.content }}</p>
            </div>
        </div>
    {% endif %}


    <div class="d-grid gap-2">
        <button
            type="button"
            data-action="live#action"
            data-live-action-param="save"
            class="btn btn-primary"
        >
            Enregistrer les modifications
        </button>
    </div>

    {% if this.is_edited %}
        <div
            class="alert alert-success my-4"
            role="alert"
        >
            <strong>Alert Heading</strong> Enregistr√© !
        </div>
    {% endif %}
   
</div>
