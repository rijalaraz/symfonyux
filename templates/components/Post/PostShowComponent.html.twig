<div{{ attributes }}>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th class="align-middle">Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Situation</th>
                <td>{{ post.situation.name }}</td>
            </tr>
            <tr>
                <th class="align-middle">Foods</th>
                <td>
                    <!-- Some borders are removed -->
                    <ul class="list-group list-group-flush">
                        {% for food in post.foods %}
                            <li class="list-group-item">{{ food.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th class="align-middle">Photos</th>
                <td>
                    <table class="table table-light form-no-mb">
                        <tbody>
                            {% for photo in post.photos %}
                            <tr>
                                <td>{{ photo.title }}</td>
                                <td><a href="#" data-bs-toggle="modal" data-bs-target="#nx27gy9bqi_{{ photo.id }}">{{ photo.url }}</a></td>
                                <td>
                                    <twig:ModalComponent id="nx27gy9bqi_{{ photo.id }}" photo="{{ photo }}" />
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <th class="align-middle">Comments</th>
                <td>
                    <!-- Some borders are removed -->
                    <ul class="list-group list-group-flush">
                        {% for comment in post.comments %}
                            <li class="list-group-item">{{ comment.description }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
