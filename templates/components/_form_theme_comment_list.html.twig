{% block live_collection_widget %}
    <table class="table table-borderless form-no-mb">
        <tbody>
            {{ block('form_widget') }}
        </tbody>
    </table>
    {% if skip_add_button|default(false) is same as(false) and button_add is defined and not button_add.rendered %}
        {{ form_widget(button_add, { label: '+ Ajouter', attr: { class: 'btn btn-outline-primary', 'data-live-action-param': 'addComment' } }) }}
    {% endif %}
{% endblock %}

{% block live_collection_entry_row %}
    <tr>
        {% for child in form %}
            <td>{{ form_row(child) }}</td>
        {% endfor %}
        <td>
            {{ form_row(button_delete, { label: 'X', attr: { class: 'btn btn-outline-danger', 'data-live-action-param': 'removeComment' } }) }}
        </td>
    </tr>
{% endblock %}